{
  "name": "node-typescript",
  "version": "1.0.0",
  "description": "Node example with Typescript and Puppeter for webscrapping",
  "main": "dist/main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon src/main.ts",
    "start": "npm run build && node dist/main.js",
