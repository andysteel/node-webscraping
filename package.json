    "@types/node-schedule": "^1.3.0",
    "@types/nodemailer": "^6.4.0",
    "@types/puppeteer": "^2.0.1",
    "@types/readline-sync": "^1.4.3",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.2",
    "nodemon": "^2.0.3",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.2",
    "ts-node": "^8.10.1",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3",
