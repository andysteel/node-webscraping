{
    "compileOnSave": true,
    "compilerOptions": {
      "rootDir": "src", 
      "baseUrl": "./",
      "outDir": "./dist",
      "module": "CommonJS",
      "esModuleInterop": true,
      "strictNullChecks": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "strict": true, 
      "allowJs": true,
      "resolveJsonModule": true, 
      "allowSyntheticDefaultImports": true,
      "target": "ES2018",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": ["ES2018","DOM"]
    },

    "include": [
      "./src/**/*.ts",
      "./src/**/*.d.ts"
    ],

    "exclude": [
      "./node_modules/**"
    ]
    
}